<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Figures</title>
  </head>
  <body>
    <%@figures.each do |figure|%>
      <h2><%=figure.name%></h2>

      <label>Titles</label>
        <ul>
          <%figure.titles.each do |title|%>
            <li><%=title%></li>
          <%end%>
        </ul>
      <label>Landmarks</label>
        <ul>
          <%figure.landmarks.each do |landmark|%>
            <li><%=landmark%></li>
          <%end%>
        </ul>
    <%end%>
  </body>
</html>
